<div class="col s12 m9">
  <% if @lists.any? %>
      <% @lists.each do |list| %>
        <div class="row">
          <div class="col s12 m12">
            <div class="card indigo">
              <div class="card-content white-text">
                <span class="card-title activator"><%= link_to list.name, list_path(list)%><i class="material-icons right">more_vert</i></span>
                <p><%= list.description %></p>
              </div>
              <div class="card-action">
                <%= link_to 'Add new item', new_list_item_path(list, @item), class: "blue-text text-lighten-4"%>
                <%= link_to "Delete this list",  list_path(list), method: :delete, class: "blue-text text-lighten-4" %>
              </div>
              <div class="card-reveal">
                <% if list.items.count >= 2 %>
                  <span class="card-title grey-text text-darken-4">Some items on the list include:<i class="material-icons right">close</i></span>
                  <p><%= list.items.sample[:name] %> and <%= list.items.sample[:name] %></p>
                <% elsif list.items.count == 1
                   %>
                   <span class="card-title grey-text text-darken-4">Some items on the list include:<i class="material-icons right">close</i></span>
                   <p><%= list.items.sample[:name] %></p>
                <% elsif %>
                  <span class="card-title grey-text text-darken-4"><%= list.name %><i class="material-icons right">close</i></span>
                  <p>You don't have anything included on this list. Try adding something that you would like to do!</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  <% else %>
        <h5>You haven't made a list yet. Go create one!</h5>
        <!-- show suggestion -->
  <% end %>
</div>